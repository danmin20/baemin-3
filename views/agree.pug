extends layout

block content
  .content
    form#join-form(action='/auth/join' method='post')
      .input-group
        input#login-id(type='text' name="id" placeholder="아이디 또는 이메일" required autofocus)
      .input-group
        input#login-pw(type='password' placeholder="비밀번호" required name='password')
      if joinError
        .error-message= joinError
      button#login-btn.btn(type='submit') 로그인
  button#goto-signup-btn.btn 회원가입
