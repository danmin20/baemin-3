extends layout

block content
  .content(style='padding: 0; background-color: #f6f6f6')
    header My배민
    img(src="/배너.png" style="width: 100%;")
    if !user
      .main-button#login-button
        div(style="display: flex; align-items: center")
          img(src="/프로필.png" style="width: 4rem;")
          span 로그인해주세요
        img(src="/화살표.png" style="width: 0.8rem")
    else
      .main-button#logout-button
        div(style="display: flex; align-items: center")
          img(src="/프로필.png" style="width: 4rem;")
          span 안녕하세요 #{user.nickname}님!
        div(style="display: flex; align-items: center")
          span(style="font-size: 1.3rem; margin-right: 1.2rem;") 로그아웃
          img(src="/화살표.png" style="width: 0.8rem")
    .menus
      .menu
        img(src="/포인트.png")
        span 포인트
      .menu
        img(src="/쿠폰함.png")
        span 쿠폰함
      .menu
        img(src="/선물함.png")
        span 선물함
      .menu
        img(src="/찜.png")
        span 찜
      .menu
        img(src="/주문내역.png")
        span 주문내역
      .menu
        img(src="/리뷰관리.png")
        span 리뷰관리
    .main-button(style="padding: 2rem 1.5rem; margin: 1rem 0;")
      div(style="display: flex; align-items: center")
        img(src="/일회용품.png" style="width: 2.5rem")
        div(style='color: rgb(142, 193, 123); font-weight: 600; margin-left: 0.5rem') 일회용품 덜 쓰기, 함께해요!
      img(src="/화살표.png" style="width: 0.8rem")
    .main-button(style="padding: 2rem 1.5rem")  
      div 배민페이 등록
        .sub 배민페이로 결제하면 최대 5.5% 배민포인트가 적립됩니다!
      img(src="/화살표.png" style="width: 0.8rem")
    .main-button(style="padding: 2rem 1.5rem") 
      div 가족계정 관리
        .sub 결제수단을 공유해 우리 가족의 끼니를 챙겨주세요.
      img(src="/화살표.png" style="width: 0.8rem")
    .main-button(style="padding: 2rem 1.5rem")  
      div 공지사항
      img(src="/화살표.png" style="width: 0.8rem")
    .main-button(style="padding: 2rem 1.5rem")  
      div 배민커넥트 지원
      img(src="/화살표.png" style="width: 0.8rem")
  script(src='/main.js')